{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:shiny_wild_stars",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/shiny_star"
			}
		},
		"curves": {
			"variable.size": {
				"type": "linear",
				"input": "v.particle_age * math.clamp(variable.particle_random_2*3, 0.5,1)",
				"horizontal_range": "v.particle_lifetime / 2",
				"nodes": [0.12, 0.4, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": "math.clamp(q.entity_size*3,3,8)"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_point": {
				"offset": [0, "q.entity_height / 2", 0],
				"direction": ["math.random(-5,5) ", "math.random(0,5) ", "math.random(-5,5) "]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 3
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random(0,359)",
				"rotation_rate": "math.random(10,20)"
			},
			"minecraft:particle_initial_speed": "math.clamp(q.entity_size * 6, 3,14)",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": "math.random(2,3)"
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["variable.size", "variable.size"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 32,
					"texture_height": 32,
					"uv": [0, 0],
					"uv_size": [32, 32]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age * variable.particle_random_2 / 0.5 / (v.particle_lifetime/ 2)",
					"gradient": {
						"0.0": "#FFFCFD15",
						"0.69": "#FFFFFFFF"
					}
				}
			}
		}
	}
}